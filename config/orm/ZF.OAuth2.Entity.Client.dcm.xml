<?xml version="1.0"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xsi="http://www.w3.org/2001/XMLSchema-instance" schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="ZF\OAuth2\Entity\Client" table="Client_OAuth2">
    <id name="id" type="integer">
      <generator strategy="AUTO"/>
    </id>
    <field name="clientId" type="string" nullable="true"/>
    <field name="secret" type="string" nullable="true"/>
    <field name="redirectUri" type="text" nullable="true"/>
    <field name="grantType" type="array" nullable="true"/>
    <unique-constraints>
      <unique-constraint name="idx_clientId_unique" columns="clientId"/>
    </unique-constraints>
    <one-to-many field="accessToken" target-entity="ZF\OAuth2\Entity\AccessToken" mapped-by="client"/>
    <one-to-many field="refreshToken" target-entity="ZF\OAuth2\Entity\RefreshToken" mapped-by="client"/>
    <one-to-many field="authorizationCode" target-entity="ZF\OAuth2\Entity\AuthorizationCode" mapped-by="client"/>
    <one-to-many field="jwt" target-entity="ZF\OAuth2\Entity\Jwt" mapped-by="client"/>
    <one-to-many field="jti" target-entity="ZF\OAuth2\Entity\Jti" mapped-by="client"/>
    <one-to-many field="publicKey" target-entity="ZF\OAuth2\Entity\PublicKey" mapped-by="client"/>
    <many-to-many field="scope" target-entity="ZF\OAuth2\Entity\Scope" mapped-by="client"/>
  </entity>
</doctrine-mapping>
