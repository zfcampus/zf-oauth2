<?xml version="1.0"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xsi="http://www.w3.org/2001/XMLSchema-instance" schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="ZF\OAuth2\Entity\AuthorizationCode" table="AuthorizationCode_OAuth2">
    <id name="id" type="integer">
      <generator strategy="AUTO"/>
    </id>
    <field name="authorizationCode" type="string" nullable="true"/>
    <field name="redirectUri" type="text" nullable="true"/>
    <field name="expires" type="datetime" nullable="true"/>
    <field name="idToken" type="text" nullable="true"/>
    <many-to-one field="client" target-entity="ZF\OAuth2\Entity\Client" inversed-by="authorizationCode">
      <join-columns>
        <join-column name="client_id" referenced-column-name="id" nullable="false"/>
      </join-columns>
    </many-to-one>
    <many-to-many field="scope" target-entity="ZF\OAuth2\Entity\Scope" mapped-by="authorizationCode"/>
  </entity>
</doctrine-mapping>
